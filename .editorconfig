# editorconfig.org
root = true

[*]
charset = utf-8
insert_final_newline = true

[*.{js, jsx, css, less, html, jade, ejs, json, yml}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

[*.py]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

[*.md]
indent_style = space
trim_trailing_whitespace = false

[makefile]
indent_style = tab

[*.sh]
indent_style = space
indent_size = 2
